<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp">

    <!-- 左側時間 -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="12:15\n13:45"
        android:textAlignment="center"
        android:textSize="13sp"
        android:textColor="#666666"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 時間線（先用系統綠色，保證不報錯） -->
    <View
        android:id="@+id/viewTimeline"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTime"/>

    <!-- 內容卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSpot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#E0E0E0"
        app:layout_constraintStart_toEndOf="@id/viewTimeline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <!-- 景點名稱 -->
            <TextView
                android:id="@+id/tvSpotName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="櫻之馬場 城彩苑（午餐）"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <!-- 副標 / 地址 -->
            <TextView
                android:id="@+id/tvSpotSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="櫻之馬場 城彩苑"
                android:textSize="13sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp"/>

            <!-- AI 建議 -->
            <TextView
                android:id="@+id/tvAISuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="午餐推薦：銀杏自助餐或菅乃屋馬肉..."
                android:textSize="13sp"
                android:textColor="#555555"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:id="@+id/btnDeleteStop"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="刪除景點"
        android:tint="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
