<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header bar -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:text="\u2039 Back"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:backgroundTint="#3F51B5"
            app:cornerRadius="8dp"
            app:rippleColor="#3F51B5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推薦地圖"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvHeaderType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="類別"
                android:textColor="#616161"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvHeaderAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者："
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <ToggleButton
            android:id="@+id/btnFav"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:textOff="收藏"
            android:textOn="已收藏" />

        <ToggleButton
            android:id="@+id/btnFollow"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:textOff="追蹤作者"
            android:textOn="已追蹤" />
    </LinearLayout>

    <!-- Map -->
    <fragment
        android:id="@+id/mapPublic"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"/>

    <!-- Bottom sheet -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/spotSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSpotPhoto"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/map"/>

            <TextView
                android:id="@+id/tvSpotTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="景點名稱"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvSpotDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="景點介紹"
                android:textColor="#616161"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnAddToTrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加入行程"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
